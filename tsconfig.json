{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"],
        "lib": ["dom", "es2016", "es2017"],
        "outDir": "dist/"
    },
    "exclude": ["node_modules", "dist"]
}